---
interface Props {
  inline?: boolean;
}

const { inline = false } = Astro.props;
---

{inline ? (
  <span class="math-inline">
    <slot />
  </span>
) : (
  <div class="math-display my-4">
    <slot />
  </div>
)}

<style>
  .math-display {
    overflow-x: auto;
    padding: 1rem;
    background-color: rgba(0, 0, 0, 0.02);
    border-radius: 0.5rem;
  }

  :global([data-theme="dark"]) .math-display {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .math-inline {
    display: inline;
    margin: 0 0.25rem;
  }
</style>
