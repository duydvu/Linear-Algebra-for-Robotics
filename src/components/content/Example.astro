---
interface Props {
  title?: string;
  robotics?: boolean;
}

const { title = "Example", robotics = false } = Astro.props;
---

<div class="card bg-base-100 shadow-sm my-6 border-l-4 border-l-primary border border-base-content/[0.06]">
  <div class="card-body">
    <h3 class="card-title text-lg flex items-center gap-2 mb-3">
      {robotics && (
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
        </svg>
      )}
      {title}
      {robotics && <span class="badge badge-primary badge-sm">Robotics Application</span>}
    </h3>
    <div class="text-base leading-relaxed">
      <slot />
    </div>
  </div>
</div>
